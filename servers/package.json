{
  "name": "servers",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "auth:dev": "npm run start:dev --prefix auth",
    "user:dev": "npm run start:dev --prefix user",
    "bank:dev": "npm run start:dev --prefix bank",
    "auth:staging": "npm run start:staging --prefix auth",
    "user:staging": "npm run start:staging --prefix user",
    "bank:staging": "npm run start:staging --prefix bank",
    "auth:prod": "npm run start:prod --prefix auth",
    "user:prod": "npm run start:prod --prefix user",
    "bank:prod": "npm run start:prod --prefix bank",
    "start:dev": "concurrently \"npm run auth:dev\" \"npm run user:dev\" \"npm run bank:dev\"",
    "start:staging": "concurrently \"npm run auth:staging\" \"npm run user:staging\" \"npm run bank:staging\"",
    "start:prod": "concurrently \"npm run auth:prod\" \"npm run user:prod\" \"npm run bank:prod\"",
    "docker:compose:staging:up": "docker-compose -f docker-compose.staging.yml up",
    "docker:compose:prod:up": "docker-compose -f docker-compose.prod.yml up",
    "docker:compose:staging:stop": "docker-compose -f docker-compose.staging.yml stop",
    "docker:compose:prod:stop": "docker-compose -f docker-compose.prod.yml stop",
    "docker:compose:staging:rm": "docker-compose -f docker-compose.staging.yml rm",
    "docker:compose:prod:rm": "docker-compose -f docker-compose.prod.yml rm",
    "docker:compose:staging:down": "docker-compose -f docker-compose.staging.yml down",
    "docker:compose:prod:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "author": "mohammad nowresideh",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.4.0"
  }
}
